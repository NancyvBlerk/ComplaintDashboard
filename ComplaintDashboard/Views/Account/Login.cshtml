@model ComplaintDashboard.Models.Account.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    h1 {
        float: left;
        position: relative;
        left: 59%;
    }
    .panel-body {
        padding-left:20%
    }
</style>
<div class="content-header" style="text-align:center">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-8">
                <h1 style="color: #333333; margin-bottom: 0px;"><strong>Admin Login</strong></h1>
            </div>
        </div>
    </div>
</div>

<div class="panel-body">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { vm = Model ,@class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @*@Html.ValidationSummary("", new { @class = "text-danger" })*@

        <div class="form-group row" style="padding-top:5px">
            <label class="col-md-3" style="text-align:right;">Email:</label>
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email", @style = "width:300px" })
        </div>
        <div class="form-group row" style="padding-top:5px;">
            <label class="col-md-3" style="text-align:right;">Password:</label>
            @Html.PasswordFor(model => model.Password, new { @class = "form-control", @style = "width:300px"})
        </div>

        <div class="form-group">
            <div class="col-md-7">
                <div class="checkbox" style="padding-left:43%;">
                    @Html.CheckBoxFor(model => model.RememberMe)
                    @Html.LabelFor(model => model.RememberMe)
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-7" style="padding-left:24%; padding-bottom:15px">
                <input type="submit" value="Login" class="btn btn-default"/>
            </div>
        </div>
    }
</div>

