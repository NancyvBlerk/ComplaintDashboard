@model ComplaintDashboard.Models.SubmissionVM
@{
    ViewBag.Title = "Home Page";
}

<style>
    h1 {
        float: left;
        position: relative;
        left: 59%;
    }

    .panel-body {
        padding-left: 20%
    }
</style>
<div class="content-header" style="text-align:center">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-8">
                <h1 style="color: #333333; margin-bottom: 0px;"><strong>Submit Complaint</strong></h1>
            </div>
        </div>
    </div>
</div>
<div class="panel-body">
    @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="form-group row" style="padding-bottom: 5px;">
            @Html.LabelFor(model => model.Name, new { @class = "col-md-3", style = "text-align:right" })
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger"})
            </div>
        </div>
        <div class="form-group row" style="padding-bottom: 5px;">
            @Html.LabelFor(model => model.Subject, new { @class = "col-md-3", style = "text-align:right" })
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.Subject, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row" style="padding-bottom: 5px;">
            @Html.LabelFor(model => model.Body, new { @class = "col-md-3", style = "text-align:right" })
            <div class="col-md-6">
                @Html.TextAreaFor(model => model.Body, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-7" style="padding-left:25%; padding-bottom:15px">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>

    }
</div>