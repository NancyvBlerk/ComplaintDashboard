@model ComplaintDashboard.Models.SubmissionVM
<style>
    h1 {
        float: left;
        position: relative;
        left: 50%;
    }
</style>
<div class="content-header" style="text-align:center">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-8">
                <h4 style="color: #333333; margin-bottom: 0px;"><strong>@Model.Name / @Model.Subject</strong></h4>
            </div>
        </div>
    </div>
</div>
<div class="panel-body">
    <div class="form-group row" style="padding-bottom:5px">
        @Html.LabelFor(model => model.DateTime)
        <div class="col-md-6">
            @Html.TextBoxFor(model => model.DateTime, new { @readonly = "readonly"})
        </div>
    </div> 
    <div class="form-group row" style="padding-bottom:5px">
        @Html.LabelFor(model => model.Body)
        <div class="col-md-6">
            @Html.TextAreaFor(model => model.Body, new { @readonly = "readonly"})
        </div>
    </div>
</div>